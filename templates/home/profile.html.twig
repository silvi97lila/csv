{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>
                    <b>
                        {{ data.name }} {{ data.lastname }}
                    </b>
                </h3>
                <span>{{ data.email }}</span>
            </div>
            <div class="card-body">
                {% for c in contact %}
                    <p>
                        <b>Company Name:</b>
                        {{ c.getCompanyName }}
                    </p>
                    <p>
                        <b>Address:</b>
                        {{ c.address }}
                    </p>
                    <p>
                        <b>City:</b>
                        {{ c.city }}
                    </p>
                    <p>
                        <b>Country:</b>
                        {{ c.country }}
                    </p>
                    <p>
                        <b>State:</b>
                        {{ c.state }}
                    </p>
                    <p>
                        <b>Zip:</b>
                        {{ c.zip }}
                    </p>
                    <p>
                        <b>Phone:</b>
                        {{ c.phone }}
                    </p>
                    <p>
                        <b>Phone1:</b>
                        {{ c.phone1 }}
                    </p>

                {% endfor %}
            </div>
            <div class="card-footer">
                <button class="btn btn-primary">Download To PDF</button>
            </div>
        </div>
    </div>
{% endblock %}
